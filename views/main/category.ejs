<% layout('layout') -%>
<div class="container">
    <div class="row">
        <% for(var i=0; i < products.length; i++) { %>
        <div class="col-sm-3">
            <a href="/product/<%= products[i]._id %>">
                <div class="thumbnail">
                <img src="<%= products[i].image %>">
                <div class="caption">
                    <h1><%= products[i].name %></h1>
                    <p><%= products[i].category.name %></p>
                    <p><%= products[i].price %></p>
                </div>
            </div>            
            </a>
        </div>
        <% } %>
    </div>
</div>