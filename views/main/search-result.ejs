<% layout('layout') -%>
<% if(data.length == 0) { %>
<h1>Product Not Found</h1>
<% } else { %>
<h2>Results for <%= query %></h2>
<div class="container">
    <div class="row">
        <% for(var i=0; i < data.length; i++) { %>
        <div class="col-sm-3">
            <a href="/product/<%= data[i]._source._id %>">
                <div class="thumbnail">
                <img src="<%= data[i]._source.image %>">
                <div class="caption">
                    <h1><%= data[i]._source.name %></h1>
                    <p><%= data[i]._source.category.name %></p>
                    <p><%= data[i]._source.price %></p>
                </div>
            </div>            
            </a>
        </div>
        <% } %>
    </div>
</div>