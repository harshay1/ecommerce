<% layout('layout') -%> 
<br><br><br><br><br>
<div class="container">
    <div class="col-sm-6 col-md-4">
        <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt=""><br>
        <p>First Name: <%= user.profile.firstname %></p>
        <p>Last Name: <%= user.profile.lastname %></p>
        <p>Email: <%= user.email %></p>
        <% if (user.address == "" || typeof user.address == "undefined") { %>
        <p>Address: <span style="color:#c0392b; font-weight: bold">You haven't updated an address yet</span></p>
        <% }  else { %>
        <p>Address: <%= user.address %></p>
        <% } %>
        <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>
</div>